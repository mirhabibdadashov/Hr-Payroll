@model Bonus

@{
    ViewData["Title"] = "EditBonus";
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditBonus">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Price" class="control-label">Price*</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GivenDate" class="control-label">Given Date*</label>
                <input asp-for="GivenDate" class="form-control" />
                <span asp-validation-for="GivenDate" class="text-danger"></span>
            </div>
            <div class="form-group d-none">
                <label asp-for="EmployeeId" class="control-label">Select Employee*</label>
                <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>