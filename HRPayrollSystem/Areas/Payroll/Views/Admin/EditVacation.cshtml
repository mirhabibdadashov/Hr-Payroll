@model VacationModel
@{
    ViewData["Title"] = "EditVacation";
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditVacation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="EmployeeId" value="@Model.EmployeeId" />
            <div class="form-group">
                <label asp-for="StartTime" class="control-label">From*</label>
                <input asp-for="StartTime" type="text" data-provide="datepicker" data-date-autoclose="true" class="datetimepicker form-control" placeholder="From" value="@Model.StartTime.ToShortDateString()">
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndTime" class="control-label">To*</label>
                <input type="text" asp-for="EndTime" data-provide="datepicker" data-date-autoclose="true" class="form-control" placeholder="To *" value="@Model.EndTime.ToShortDateString()">
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>