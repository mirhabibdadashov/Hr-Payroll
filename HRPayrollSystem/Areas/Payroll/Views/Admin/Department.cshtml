@model DepartmentModel
@{
    ViewData["Title"] = "Department";
}
<div class="d-flex justify-content-center">
    <p>
        <strong>Departments</strong>
    </p>
</div>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Department Name</th>
            <th>Redaction</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Department department in Model.Departments)
        {
            <tr>
                <td>
                    <span class="click-department-name">@department.Name</span>
                    <input type="text" name="name" value="@department.Name" id="@department.Id" class="department-name d-none" />
                </td>
                <td>
                    <a href="/Payroll/Admin/DeleteDepartment/@department.Id">Delete</a>
                </td>
            </tr>
        }
        <tr>
            <td><a href="javascript:void(0);" class="btn btn-info" data-toggle="modal" data-target="#DepartmentModal"><i class="fas fa-plus-circle"></i>Add New Department</a></td>
        </tr>
    </tbody>
</table>
<div class="modal fade" id="DepartmentModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add New Department</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Department">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Name*</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>